{
  "name": "simple-boilerplate",
  "version": "2.0.0",
  "description": "A simple boilerplate to create static sites.",
  "author": "Milson JÃºnior",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mjnr/Simple-Boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mjnr/Simple-Boilerplate/issues"
  },
  "homepage": "https://github.com/mjnr/Simple-Boilerplate",
  "keywords": [
    "boilerplate",
    "node",
    "frontend",
    "jade",
    "stylus",
    "webpack"
  ],
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "browser-sync": "^2.13.0",
    "concurrently": "^2.1.0",
    "imagemin-cli": "^3.0.0",
    "poststylus": "^0.2.3",
    "pug-cli": "^1.0.0-alpha6",
    "rucksack-css": "^0.8.6",
    "rupture": "^0.6.1",
    "stylus": "^0.54.5",
    "webpack": "^1.13.1"
  },
  "scripts": {
    "serve": "browser-sync start --server 'dist' --files 'dist/**/*.html', 'dist/assets/css/*.css', 'dist/assets/js/*.js'",
    "optimize:images": "imagemin dev/images/*.{gif,jpg,png,svg} --out-dir=dist/assets/images",
    "build:scripts": "webpack -p",
    "watch:scripts": "npm run build:scripts -- -w",
    "build:styles": "stylus -c -u poststylus --with '[require(\"rucksack-css\")()]' -u rupture -m dev/styles/ -o dist/assets/css/",
    "watch:styles": "npm run build:styles -- -w",
    "build:views": "pug dev/views/pages -o dist",
    "watch:views": "npm run build:views -- -w",
    "watch:all": "concurrently --kill-others 'npm run watch:scripts' 'npm run watch:styles' 'npm run watch:views'",
    "start": "concurrently --kill-others 'npm run serve' 'npm run watch:all'"
  },
  "dependencies": {
    "jquery": "^3.0.0"
  }
}

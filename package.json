{
  "name": "simple-boilerplate",
  "version": "2.0.0",
  "description": "A simple boilerplate to create static sites.",
  "author": "Milson JÃºnior",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mjnr/Simple-Boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/mjnr/Simple-Boilerplate/issues"
  },
  "homepage": "https://github.com/mjnr/Simple-Boilerplate",
  "keywords": [
    "boilerplate",
    "node",
    "frontend",
    "pug",
    "stylus",
    "webpack"
  ],
  "devDependencies": {
    "babel-core": "6.10.4",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.9.0",
    "browser-sync": "2.13.0",
    "concurrently": "2.1.0",
    "critical": "0.7.3",
    "cross-conf-env": "1.0.6",
    "eslint-loader": "1.4.1",
    "glob": "7.0.5",
    "husky": "0.11.4",
    "imagemin": "5.2.2",
    "imagemin-mozjpeg": "6.0.0",
    "imagemin-pngquant": "5.0.0",
    "jeet": "6.1.2",
    "mkdirp": "0.5.1",
    "poststylus": "0.2.3",
    "pug-cli": "1.0.0-alpha6",
    "rimraf": "2.5.2",
    "rucksack-css": "0.8.6",
    "rupture": "0.6.1",
    "stylint": "1.5.6",
    "stylint-stylish": "1.3.2",
    "stylus": "0.54.5",
    "webpack": "1.13.1"
  },
  "config": {
    "dev": "./dev/",
    "dist": "./dist/",
    "views": {
      "dev": "./dev/views/pages ./dev/views/pages/**",
      "dist": "./dist/"
    },
    "styles": {
      "dev": "./dev/styles/",
      "dist": "./dist/assets/css"
    },
    "scripts": {
      "dev": "./dev/scripts/",
      "dist": "./dist/assets/js/"
    },
    "images": {
      "dev": "./dev/images/**/*.{gif,jpg,png,svg}",
      "dist": "./dist/assets/images/"
    }
  },
  "stylintignore": [
    "dev/styles/config/",
    "dev/styles/base/fonts.styl",
    "dev/styles/vendors/"
  ],
  "scripts": {
    "reset": "cross-conf-env npm run clean && npm run create",
    "clean": "cross-conf-env rimraf $npm_package_config_dist",
    "create": "cross-conf-env mkdirp ${npm_package_config_dist}assets/css/fonts/ ${npm_package_config_dist}assets/js/ ${npm_package_config_dist}assets/images/",
    "watch:scripts": "cross-conf-env npm run build:scripts -- -w",
    "watch:styles": "cross-conf-env concurrently -kr 'npm run build:styles -- -w' 'npm run lint:styles -- -w'",
    "watch:views": "cross-conf-env npm run build:views -- -Pw",
    "watch:all": "cross-conf-env concurrently -kr 'npm run watch:scripts' 'npm run watch:styles' 'npm run watch:views'",
    "build:scripts": "cross-conf-env webpack",
    "build:styles": "cross-conf-env stylus -u poststylus --with '[require(\"rucksack-css\")()]' -u rupture -u jeet --sourcemap-inline $npm_package_config_styles_dev -o $npm_package_config_styles_dist",
    "build:views": "cross-conf-env pug -O ./options.json $npm_package_config_views_dev -o $npm_package_config_views_dist",
    "lint:styles": "cross-conf-env stylint ${npm_package_config_styles_dev}**/ -c ./.stylintrc",
    "lint:scripts": "cross-conf-env eslint ${npm_package_config_scripts_dev}** ${npm_package_config_scripts_dev}* -c ./.eslintrc",
    "optimize:images": "cross-conf-env node ./imagemin.js",
    "critical:path": "cross-conf-env npm run build:views && node ./critical-path.js",
    "build:prod": "cross-conf-env npm run build:scripts -- -p && npm run build:styles -- -c && npm run optimize:images && npm run critical:path",
    "build:dev": "cross-conf-env npm run reset && npm run build:scripts -- --bail && npm run lint:styles && npm run build:styles && npm run build:views && npm run optimize:images",
    "lint": "cross-conf-env npm run lint:styles -s && npm run lint:scripts -s",
    "precommit": "cross-conf-env npm run lint -s",
    "prepush": "cross-conf-env npm run lint -s",
    "serve": "cross-conf-env browser-sync start -s $npm_package_config_dist -f '${npm_package_config_dist}**/*.html', '${npm_package_config_styles_dist}*.css', '${npm_package_config_scripts_dist}*.js'",
    "start": "cross-conf-env npm run reset && npm run optimize:images && concurrently -kr 'npm run watch:all' 'npm run serve'"
  },
  "dependencies": {
    "jquery": "^3.0.0"
  }
}
